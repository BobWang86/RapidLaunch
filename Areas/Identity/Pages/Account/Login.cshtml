@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-2 col-sm-12">
                <!-- WHITE PANEL - TOP USER -->
                <div class="white-panel">
                    <div class="white-header">
                        <h4>Log in to your account</h4>
                        <b>
                            <sm>
                                <span>Don't have an account?</span>&nbsp;&nbsp;
                                <a asp-area="Identity" asp-page="/Account/Register">Register here</a>
                            </sm>
                        </b>
                    </div>

                    <form method="post" style="padding: 1rem;">
                        @if (Model.ShowResend)
                        {
                            <p>
                                <a asp-page="./UnconfirmedEmail" asp-route-userId="@Model.UserId">Resend verification?</a>
                            </p>
                        }
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger d-inline-block"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger d-inline-block"></span>
                        </div>
                        <div class="checkbox pt-3">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>

                            <label class="pull-right">
                                <a asp-page="./ForgotPassword">Forgot your password?</a>
                            </label>
                        </div>

                        <div class="form-send">
                            <button type="submit" class="btn btn-block btn-primary">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

