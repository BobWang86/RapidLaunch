@{
    Layout = "/Views/Shared/_MainLayout.cshtml";
}

<div class="container">
    <div class="col-lg-12 col-md-12 col-sm-12 col-12 mb-5">
        <div class="section-block py-3">
            <h4 class="section-title text-center">Manage your account</h4>
        </div>
        <div class="card card-identity card-container">
            <ul class="nav nav-tabs nav-fill" id="identityTab">
                <li class="nav-item">
                    <a class="nav-link" id="Index-tab" asp-page="./Index">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="ChangeEmail-tab" asp-page="./ChangeEmail">Change Email</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="ChangePassword-tab" asp-page="./ChangePassword">Change Password</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="PersonalData-tab" asp-page="./PersonalData">Personal Data</a>
                </li>
            </ul>
            <div class="tab-content" id="identityTabContent">
                <div class="tab-pane fade show active" id="">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}

<script>
    $(function () {
        var page = '@Html.Raw(ViewData["ActivePage"])';
        var tab = '#' + page + '-tab';
        $(tab).addClass('active');
    })
</script>
