@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-2 col-sm-12">
            <!-- WHITE PANEL - TOP USER -->
            <div class="white-panel">
                <div class="white-header">
                    <h4>Register new account</h4>
                    <b>
                        <sm>
                            <span>Already have an account?</span>&nbsp;&nbsp;
                            <a asp-area="Identity" asp-page="/Account/Login">Login here</a>
                        </sm>
                    </b>
                </div>

                    <form method="post" style="padding: 1rem;">
                        <div class="form-group">
                            <label asp-for="Input.FirstName"></label>
                            <input asp-for="Input.FirstName" class="form-control" />
                            <span asp-validation-for="Input.FirstName" class="text-danger d-inline-block"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.LastName"></label>
                            <input asp-for="Input.LastName" class="form-control" />
                            <span asp-validation-for="Input.LastName" class="text-danger d-inline-block"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Postcode"></label>
                            <input asp-for="Input.Postcode" class="form-control" />
                            <span asp-validation-for="Input.Postcode" class="text-danger d-inline-block"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.DOB"></label>
                            <input asp-for="Input.DOB" class="form-control" />
                            <span asp-validation-for="Input.DOB" class="text-danger d-inline-block"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.NHSNumber"></label>
                            <input asp-for="Input.NHSNumber" class="form-control" />
                            <span asp-validation-for="Input.NHSNumber" class="text-danger d-inline-block"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger d-inline-block"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger d-inline-block"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger d-inline-block"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.PhoneNumber"></label>
                            <input asp-for="Input.PhoneNumber" class="form-control" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger d-inline-block"></span>
                        </div>

                        <div class="form-send">
                            <button type="submit" class="btn btn-block btn-theme">Register</button>
                        </div>
                    </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}