@model RapidLaunch.Models.Rocket

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h3>Are you sure you want to delete this Rocket?</h3>
<h4>Related rocket launch records will also be deleted.</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RocketCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RocketCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ManufactureDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ManufactureDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RocketModel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RocketModel.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RocketStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RocketStatus.Name)
        </dd>
    </dl>

    <form asp-action="RocketDelete">
        <input type="hidden" asp-for="RocketID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="RocketCreate" asp-route-id=@Model.RocketModelID class="btn btn-info">Back to List</a>
    </form>
</div>
