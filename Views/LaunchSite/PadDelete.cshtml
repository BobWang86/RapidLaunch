@model RapidLaunch.Models.LaunchPad

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h3>Are you sure you want to delete this launch pad?</h3>
<h4>Related rocket launch records will also be deleted.</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LaunchPadCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LaunchPadCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LaunchSite)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LaunchSite.LaunchSiteID)
        </dd>
    </dl>

    <form asp-action="PadDelete">
        <input type="hidden" asp-for="LaunchPadID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="PadCreate" asp-route-id=@Model.LaunchSiteID class="btn btn-info">Back to List</a>
    </form>
</div>
