@model RapidLaunch.Models.LaunchSite

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h3>Create Launch Site</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Longitude</label>
                <input name="longitude" type="number" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Latitude</label>
                <input name="latitude" type="number" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BuildDate" class="control-label"></label>
                <input asp-for="BuildDate" class="form-control" />
                <span asp-validation-for="BuildDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />|
                <a asp-action="Manage" class="btn btn-info">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
