@model IEnumerable<RapidLaunch.Models.LaunchSite>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h4>Rocket Launch Sites</h4>
<hr>
<!-- row -->
<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Country)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            Longitude
                        </th>
                        <th>
                            Latitude
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BuildDate)
                        </th>
                        <th>
                            Location
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var Longitude = Html.Raw(item.Location.Coordinate.X.ToString());
                        var Latitude = Html.Raw(item.Location.Coordinate.Y.ToString());
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Country)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Location.Coordinate.X)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Location.Coordinate.Y)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BuildDate)
                            </td>
                            <td><a  href="https://www.google.com/maps/search/?api=1&query=@Latitude,@Longitude" class="label label-info tooltips" data-placement="left" data-original-title="Open Google Map">Find Launche Site</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /content-panel -->
    </div>
    <!-- /col-md-12 -->
</div>
<!-- /row -->
