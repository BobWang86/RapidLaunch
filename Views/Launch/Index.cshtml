@model RapidLaunch.Models.ViewModels.LaunchVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h4>Rocket Launches</h4>
<hr>
<section class="wrapper">
    <div class="row mb">
        <!-- page start-->
        <div class="content-panel">
            <div class="adv-table">
                <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                    <thead>
                        <tr>
                            <th>
                                Launch Date
                            </th>
                            <th>
                                Provider
                            </th>
                            <th>
                                Rocket
                            </th>
                            <th>
                                Launch Pad
                            </th>
                            <th>
                                Launch Orbit
                            </th>
                            <th>
                                Launch Status
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Launches)
                        {
                            string status = item.LaunchStatus;
                            string css = "";

                            switch (status)
                            {
                                case "Success":
                                    css = "label-success";
                                    break;
                                case "Failure":
                                    css = "label-danger";
                                    break;
                                case "Scheduled":
                                    css = "label-primary";
                                    break;
                                default:
                                    css = "label-info";
                                    break;
                            }

                            <tr class="gradeU">
                                <td>
                                    @Html.DisplayFor(modelItem => item.LaunchDate)  @Html.DisplayFor(modelItem => item.LaunchTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Provider)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rocket)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LaunchPad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LaunchOrbit)
                                </td>
                                <td>
                                    <span class="label label-mini @css">@item.LaunchStatus</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- page end-->
    </div>
</section>

<script type="text/javascript">
    $(document).ready(function () {
        /*
        * Initialse DataTables, with no sorting on the 'details' column
        */
        var oTable = $('#hidden-table-info').dataTable({
            "aoColumnDefs": [{
                "bSortable": false,
                "aTargets": [0]
            }],
            "aaSorting": [
                [1, 'asc']
            ]
        });
    });
</script>
