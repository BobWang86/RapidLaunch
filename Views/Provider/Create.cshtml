@model RapidLaunch.Models.Provider

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h3>Create Provider</h3>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstablishDate" class="control-label"></label>
                <input asp-for="EstablishDate" class="form-control" />
                <span asp-validation-for="EstablishDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Rocket Models</label>
                <select name="selectedRocketModels" asp-items="@ViewBag.LinkedList" multiple data-live-search="true" class="selectpicker form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                <a asp-action="Manage" class="btn btn-info">Back to List</a>
            </div>
        </form>
    </div>
</div>


