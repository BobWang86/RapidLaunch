@model ProviderVM

@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <h4>Rocket Launch Providers</h4>
    </div>
    <div class="col-md-6">
        <a asp-action="Create" class="btn btn-success pull-right"><i class="fa fa-plus-circle"></i> Create New</a>
    </div>
</div>
<hr>
<!-- row -->
<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Rocket Models
                        </th>
                        <th>
                            Date Established
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Providers)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @{ 
                                    foreach (var rm in item.RocketModelLinks)
                                    {
                                        @rm.RocketModel.Name @: <br/>
                                    }
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EstablishDate)
                            </td>
                            <td>
                                <a class="btn btn-primary btn-xs tooltips" data-placement="left" data-original-title="Edit" asp-action="Edit" asp-route-id=@item.ProviderID><i class="fa fa-pencil"></i></a>
                                <a class="btn btn-danger btn-xs tooltips" data-placement="left" data-original-title="Delete" asp-action="Delete" asp-route-id=@item.ProviderID><i class="fa fa-trash-o "></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /content-panel -->
    </div>
    <!-- /col-md-12 -->
</div>
<!-- /row -->

